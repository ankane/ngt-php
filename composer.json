{
    "name": "ankane/ngt",
    "description": "High-speed approximate nearest neighbors for PHP",
    "license": "Apache-2.0",
    "support": {
        "issues": "https://github.com/ankane/ngt-php/issues",
        "source": "https://github.com/ankane/ngt-php"
    },
    "authors": [
        {
            "name": "Andrew Kane",
            "email": "andrew@ankane.org"
        }
    ],
    "autoload": {
        "psr-4": {
            "Ngt\\": "src/"
        }
    },
    "require": {
        "php": ">= 8.1",
        "ext-ffi": ">= 8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10"
    },
    "scripts": {
        "test": "phpunit tests",
        "valgrind": "valgrind --leak-check=full --trace-children=yes --error-exitcode=1 --quiet phpunit tests",
        "post-install-cmd": "Ngt\\Vendor::check",
        "post-update-cmd": "Ngt\\Vendor::check"
    }
}
